<% layout('layouts/authentication') -%>

<% block('title', 'Sign Up') %>

<div class="sign-up">
    <div class="row no-mrg-horizon">
        <div class="col-md-4 no-pdd-horizon d-none d-md-block">
            <div class="full-height bg" style="background-image: url('https://images.unsplash.com/photo-1498462335304-e7263fe3925a?ixlib=rb-0.3.5&s=8b58ce927b35e73414eabfb16396b41e')">
                <div class="vertical-align full-height pdd-horizon-70">
                    <div class="table-cell">
                        <div class="row">
                            <div class="mr-auto ml-auto col-md-10">
                                <div class="text-right">
                                    <img class="img-responsive mrg-left-auto mrg-btm-15" src="/images/logo/logo-white.png" alt="" width="170">
                                    <p class="text-white lead text-opacity lh-1-7">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 bg-white no-pdd-horizon">
            <div class="row">
                <div class="col-md-6">
                    <div class="full-height height-100">
                        <div class="vertical-align full-height pdd-horizon-70">
                            <div class="table-cell">
                                <div class="pdd-horizon-15">
                                    <!-- show any messages that come back with authentication -->
                                    <% if (message.length > 0) { %>
                                        <div class="alert alert-danger"><%= message %></div>
                                    <% } %>

                                    <h1 class="mrg-btm-30">Create Your account</h1>

                                    <div class="form-group">
                                        <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Connect with Facebook</a>
                                    </div>

                                    <p>Already have an account? <a href="/login">Sign In</a></p>
                                    <hr>
                                    <small>By signing up you agree to out <a href="/terms">Terms & Policy</a></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
